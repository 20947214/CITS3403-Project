<% provide(:title, @user.name) %>
<%= render 'layouts/header' %>
<div id="shift_down_container">
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.image_url.to_s %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="span8">
   <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
</div>